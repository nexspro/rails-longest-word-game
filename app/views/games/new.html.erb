<div class="container text-center mt-5">
  <h1 class="text-primary mb-4">New game</h1>
  <p class="fw-bold">Use the following letters to form a word:</p>

  <div class="d-flex justify-content-center mb-4">
    <% @letters.each do |letter| %>
      <span class="border border-dark rounded mx-2 p-2 fs-4 bg-light">
        <%= letter %>
      </span>
    <% end %>
  </div>

  <%= form_with url: score_path, method: :post, data: { turbo: false }, class: "mt-3" do |f| %>
    <div class="mb-3">
      <%= f.label :word, "Your word:", class: "form-label fw-bold" %>
      <%= f.text_field :word, class: "form-control d-inline w-25" %>
    </div>
    <%= f.hidden_field :letters, value: @letters.join %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
  <div id="result"></div>
</div>
